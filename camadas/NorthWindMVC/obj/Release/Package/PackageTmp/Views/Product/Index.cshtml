@using NorthWindMVC.Models
@model List<Product>
@{
   //  Layout = null;
   ViewBag.Title = "Produtos";
}
<a href="/Product/New">Novo Produto</a>

<table border="1">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Fornecedor</th>
            <th>Categoria</th>
            <th></th>
        </tr>
    </thead>
    @{foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductID</td>
            <td>@item.ProductName</td>
            <td>@item.Supplier.CompanyName </td>
            <td>@item.Category.CategoryName </td>
            @*Crie um hiperlink para o Controller
                Employee Método Edit passando como
                parametro id = 1 para todas as linhas*@
            <td><a href="\Product\Edit?id=@(item.ProductID)">Editar</a></td>
        </tr>
    }
    }
    
</table>